<div class="Title">Listing players</div>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Condition</th>
    <th>Stun</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.user_id %></td>
    <td><%= player.condition %></td>
    <td><%= player.stun %></td>
    <td><%= link_to 'Nodes', controller: :nodes, action: :index, player: player.id %>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Player', new_player_path %>
<%= link_to 'Upload Player', controller: :players, action: :upload %>
