<% @page_title = "Your Players" -%>
<div class= "Sign_Form">
	<div class= "Title">Select or Edit a Player</div>
	<p class="<%= flash[:color] %>"><%= flash[:notice] %></p>
	<div class= "ListContainer">
	<% Player.where("user_id = ?", session[:user_id]).each do |p| %>
	<div class= "ListElement"> <%= link_to p.name, :action => :select, :id => p.id %> <%= link_to image_tag("edit16.png", :border => 0), {:action => :edit, :id => p.id } , :class => "EditTag" %> <%= link_to image_tag("delete16.png", :border => 0), {:action => :delete, :id => p.id} , :class => "DeleteTag" %>  </div>
	<% end %>
	</div>
	<%= button_to "Upload Player", :action => :new %>
</div>
