<% @page_title = "Edit Player" %>
				<div class= "Sign_Form">
					<div class="Title">Edit Player</div>
					<p class="<%= flash[:color] %>"><%= flash[:notice] %></p>
					<%= form_for(:player, :url => {:controller => 'player', :action => :edit_attempt}) do |f| %>

						<p> Name:</br> <%= f.text_field :username %> </p>
						<p> Skills: </p>
						<% render "skillset/edit" %>
						<% render "programset/edit" %>

						<%= f.submit :Save %>
					<% end %>

					<% if @player.errors.any? %>
						<ul class="FormErrors">
							<% for message_error in @player.errors.full_messages %>
							<li>* <%= message_error %></li>
							<% end %>
						</ul>
					<% end %>
					<% if @skillset.errors.any? %>
						<ul class="FormErrors">
							<% for message_error in @skillset.errors.full_messages %>
							<li>* <%= message_error %></li>
							<% end %>
						</ul>
					<% end %>
					<% if @programset.errors.any? %>
						<ul class="FormErrors">
							<% for message_error in @programset.errors.full_messages %>
							<li>* <%= message_error %></li>
							<% end %>
						</ul>
					<% end %>
</div>
