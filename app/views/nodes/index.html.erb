<div class="Title">Listing nodes</div>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Firewall</th>
    <th>System</th>
    <th>Pilot</th>
    <th>Signal</th>
    <th>Response</th>
    <th>Programset</th>
    <th>Player</th>
    <th>Gamesession</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.name %></td>
    <td><%= node.desc %></td>
    <td><%= node.firewall %></td>
    <td><%= node.system %></td>
    <td><%= node.pilot %></td>
    <td><%= node.signal %></td>
    <td><%= node.response %></td>
    <td><%= link_to "Edit", edit_programset_path(node.programset_id) %></td>
    <% player = Player.find_by_id(node.player_id) %>
    <td><%= player ? player.name : "None"  %></td>
    <% game = Gamesessions.find_by_id(node.gamesession_id) %>
    <td><%= game ? game.name : "None" %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

