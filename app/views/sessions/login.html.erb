<% @page_title = "Login" -%>
<div class= "Sign_Form">
	<div class= "Title"></div>
	<div class= "Login_Container">
	<p class="<%= flash[:color] %>"><%= flash[:notice] %></p>

	<%= form_for(:login, :url => { :controller => :sessions, :action => :login_attempt}) do |f| %>
		<div class= "Login_Element"><div class= "Label">Username or Email:</div> <%= f.text_field :username_or_email%></div>
		<div class= "Login_Element"><div class= "Label">Password:</div> <%= f.password_field :login_password%></div>
		<div class= "Login_Element"> <%= f.submit :Login%>
	<% end %>
	</div>
</div>
